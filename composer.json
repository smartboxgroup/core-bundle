{
    "name": "smartbox/core-bundle",
    "description": "Smartbox Core Bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
      "psr-4": {
        "Smartbox\\CoreBundle\\": ""
      }
    },
    "require": {
        "php": ">=7.4 || ^8.0",
        "ext-simplexml": "*",
        "ext-dom": "*",
        "symfony/console": "~2.8 || ~3.0 || ^4.4",
        "symfony/framework-bundle": "~2.8 || ~3.0 || ^4.4",
        "symfony/property-access": "~2.8 || ~3.0 || ^4.4",
        "symfony/expression-language": "~2.8 || ~3.0 || ^4.4",
        "jms/serializer": "^3.0",
        "symfony/dotenv": "~2.8 || ~3.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "predis/predis": "dev-main",
        "snc/redis-bundle": "^3.6",
        "symfony/monolog-bundle": "~2.4 || ~3.0 || ^4.4",
        "symfony/phpunit-bridge": "^4.2",
        "symfony/validator": "~2.8 || ~3.0 || ^4.4",
        "jms/serializer-bundle": "^3.10",
        "phpunit/phpunit": "^9.5",
        "symfony/translation": "~2.8 || ~3.0 || ^4.4 || ^5.4"
    },
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}